<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Home"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_home">



    <android.support.v7.widget.CardView
        android:id="@+id/homeMostPuplar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/conent_home_mostPupular_img"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/most_pupular"
                android:scaleType="fitXY"
                />


            <TextView
                android:id="@+id/conent_home_mostPupular_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorPrimary"
                android:text="MOST POPULAR"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/conent_home_mostPupular_img"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/request_card_view"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/homeMostPuplar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/conent_home_topRated_img"

                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/top_rated"
                android:scaleType="fitXY"
                />


            <TextView
                android:id="@+id/conent_home_topRated_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
               android:layout_alignParentStart="true"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/conent_home_topRated_img"
                android:textColor="@color/colorPrimary"
                android:text="TOP POPULAR" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>